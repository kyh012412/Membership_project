<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cd">

	<!-- 장바구니에 상품 추가 -->
	<insert id="cart_insert" parameterType="int">
		insert into cart_detail values(#{m_idx}, #{i_idx}, 1)
	</insert>
	
	<!-- 장바구니 전체 조회 -->
	<select id="cart_select_list" resultMap="cart_list">
		SELECT * FROM item i, CART_DETAIL cd WHERE i.I_IDX = cd.I_IDX;
	</select>
	
	<!-- cart_detail 테이블과 item 테이블을 조인한 결과를 매핑해주기 -->
	<resultMap type="" id="cart_list">
		
	</resultMap>
</mapper>
