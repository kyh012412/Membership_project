<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="m">
	<select id="loginCheck" resultType="member"
		parameterType="String">
		select * from p_member where m_username=#{m_username}
	</select>

	<select id="idCheck" resultType="int" parameterType="String">
		select
		count(*) from p_member where m_username=#{m_username}
	</select>

	<insert id="insert" parameterType="member">
		insert into p_member values(
		#{m_name},
		#{m_username},
		#{m_password},
		#{m_email}
		)
	</insert>
	
	<select id="login_session_check" resultType="member" parameterType="int">
		select * from p_member where idx=#{idx}
	</select>
	
	<select id="selectone" resultType="member" parameterType="int">
		select * from p_member where idx=#{idx}
	</select>
	
	
	<update id="del_update" parameterType="member">
		update p_member set m_username = 'del'+#{m_username} where idx = #{idx}
	</update>

</mapper>


